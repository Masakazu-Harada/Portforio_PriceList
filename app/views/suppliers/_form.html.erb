<% if model.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3><%= pluralize(model.errors.count, "error") %> prohibited this user from being saved:</h3>
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: supplier do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", id: "supplier_name" %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", id: "supplier_address" %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control", id: "supplier_phone_number" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
