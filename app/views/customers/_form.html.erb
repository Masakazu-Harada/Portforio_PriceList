<%= form_with(model: customer) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, placeholder: "株式会社○○", class: "form-control", id: "customer_name" %>
  </div>
  <p>販売ランク設定</p>
  <div class="form-check">
    <%= f.collection_radio_buttons(:rank_id, Rank.all, :id, :name) %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :share, class: "form-label" %>
    <%= f.text_area :share, placeholder: "値上げ交渉は社長へ。", class: "form-control", id: "customer_share" %>
  </div>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
