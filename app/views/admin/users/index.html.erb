<h1>社員アカウント一覧</h1>

<nav class="nav justify-content-end">
  <%= link_to "ダッシュボードへ戻る", root_path %>
</nav>

<%= link_to "新規登録", new_admin_user_path, class: "btn btn-primary" %>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= Department.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:admin) %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, [:admin, user] %></td>
          <td><%= user.departments.pluck(:name).join(',') %></td>
          <td><%= user.admin? ? "管理者権限あり" : "管理者権限なし" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
