<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, url: form_url, method: form_method, local: true) do |form| %>
  <%= form.hidden_field :user_type, value: "customer" %>
  <div class="form-group">
    <%= form.label :customer_id, "会社名" %>
    <%= form.collection_select :customer_id, @customers, :id, :name, {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :name, "お客様氏名" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, "パスワード確認" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit submit_text, class: "btn btn-primary" %>
  </div>
<% end %>
